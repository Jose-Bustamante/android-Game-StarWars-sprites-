<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jose_user.juegojedis" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ico"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuInicial"
            android:label="@string/title_activity_menu_inicial"
            android:screenOrientation="landscape">
            //android:screenOrientation="sensorLandscape" no es una opcion porque al usar el acelerometro para el movimiento, se mueve la camara.
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/rSettingsActivityName"
            android:screenOrientation="landscape"
            android:theme="@style/PreferencesTheme" >
        </activity>
        <activity
            android:screenOrientation="landscape"
            android:name=".Scores"
            android:label="@string/title_activity_scores" >
        </activity>
    </application>

</manifest>
