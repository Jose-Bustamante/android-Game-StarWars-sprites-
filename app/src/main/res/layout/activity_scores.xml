<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jose_user.juegojedis.Scores"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/rScore"
        android:id="@+id/tvScore"
        android:textColor="#ff0001"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvScore1"
        android:layout_toEndOf="@+id/tvScore1" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/rScore"
        android:id="@+id/tvShowScore"
        android:textColor="#ff0001"
        android:textAlignment="center"
        android:textIsSelectable="true"
        android:textSize="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1º"
        android:id="@+id/tvScore1"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2º"
        android:id="@+id/tvScore2"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore1"
        android:layout_alignLeft="@+id/tvScore1"
        android:layout_alignStart="@+id/tvScore1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3º"
        android:id="@+id/tvScore3"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore2"
        android:layout_alignLeft="@+id/tvScore2"
        android:layout_alignStart="@+id/tvScore2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4º"
        android:id="@+id/tvScore4"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore3"
        android:layout_alignLeft="@+id/tvScore3"
        android:layout_alignStart="@+id/tvScore3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5º"
        android:id="@+id/tvScore5"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore4"
        android:layout_alignLeft="@+id/tvScore4"
        android:layout_alignStart="@+id/tvScore4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1ºScore"
        android:id="@+id/tvScore1Res"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_above="@+id/tvScore2"
        android:layout_toLeftOf="@+id/imageButton4"
        android:layout_toStartOf="@+id/imageButton4"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2ºScore"
        android:id="@+id/tvScore2Res"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore1Res"
        android:layout_alignLeft="@+id/tvScore1Res"
        android:layout_alignStart="@+id/tvScore1Res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3ºScore"
        android:id="@+id/tvScore3Res"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore2Res"
        android:layout_alignLeft="@+id/tvScore2Res"
        android:layout_alignStart="@+id/tvScore2Res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4ºScore"
        android:id="@+id/tvScore4Res"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore3Res"
        android:layout_alignLeft="@+id/tvScore3Res"
        android:layout_alignStart="@+id/tvScore3Res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5ºScore"
        android:id="@+id/tvScore5Res"
        android:textColor="#ff0603"
        android:textSize="30dp"
        android:layout_below="@+id/tvScore4Res"
        android:layout_alignLeft="@+id/tvScore4Res"
        android:layout_alignStart="@+id/tvScore4Res" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:src="@drawable/stargame"
        android:layout_alignTop="@+id/tvScore1Res"
        android:layout_alignLeft="@+id/tvShowScore"
        android:layout_alignStart="@+id/tvShowScore"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:onClick="btnContinuar" />

</RelativeLayout>
